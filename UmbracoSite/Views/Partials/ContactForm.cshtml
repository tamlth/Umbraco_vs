@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using UmbracoMVC.Controllers
@using Umbraco.Web

@TempData["Success"]
@using (Html.BeginUmbracoForm<ContactController>("Submit", "ContactForm", FormMethod.Post))
{
    <div class="contactform">
        <p class="comment-form-author">
            <label for="author">@Umbraco.GetDictionaryValue("Name") <span class="required">*</span></label>
            <input type="text" required="required" size="30" name="Name" id="Name">
        </p>
        <p class="comment-form-email">
            <label for="email">@Umbraco.GetDictionaryValue("Email") <span class="required">*</span></label>
            <input type="email" required="required" aria-required="true" name="Email" id="Email">
        </p>
        <p class="comment-form-url">
            <label for="subject">@Umbraco.GetDictionaryValue("Subject")</label>
            <input type="text" name="Subject" id="Subject">
        </p>
        <p class="comment-form-url">
            <label for="subject">@Umbraco.GetDictionaryValue("Message")</label>
            <textarea required="required" aria-required="true" rows="8" cols="45" name="Message" id="Message"></textarea>
        </p>
        <input hidden id="parentId" name="parentId" value="@Model.Id">
        <p class="form-submit">
            <input type="submit" value="Submit" class="mu-post-btn" name="Submit">
        </p>
    </div>
}
