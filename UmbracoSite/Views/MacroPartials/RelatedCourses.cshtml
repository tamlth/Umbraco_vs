@inherits Umbraco.Web.Macros.PartialViewMacroPage
@{
    var root = Umbraco.ContentAtRoot().FirstOrDefault();
    var currentPage = Umbraco.AssignedContentItem;

    var data = currentPage.Value("relatedCourses");
    List<IPublishedContent> relatedCourses = new List<IPublishedContent>();
    if (data != null)
    {
        relatedCourses = (List<IPublishedContent>)data;
    }
}
<div class="row">
    <div class="col-md-12">
        <div class="mu-related-item">
            @if (relatedCourses.Count > 0)
            {
                <h3>Related Courses</h3>
            }
            <div class="mu-related-item-area">
                <div id="mu-related-item-slide">
                    @foreach (var item in relatedCourses)
                    {
                        <div class="col-md-6">
                            <div class="mu-latest-course-single">
                                <figure class="mu-latest-course-img">
                                    <a href="@item.Url"><img alt="img" src="@item.Value("courseImage")"></a>
                                    <figcaption class="mu-latest-course-imgcaption">
                                        <a href="#">Web Development</a>
                                        <span><i class="fa fa-clock-o"></i>@item.Value("courseDuration")</span>
                                    </figcaption>
                                </figure>
                                <div class="mu-latest-course-single-content">
                                    <h4><a href="@item.Url">@item.Value("courseTitle")</a></h4>
                                    <p>@Html.Truncate(item.Value<string>("courseDescription"), 150, true)</p>
                                    <div class="mu-latest-course-single-contbottom">
                                        <a href="@item.Url" class="mu-course-details">Details</a>
                                        <span href="#" class="mu-course-price">@item.Value("coursePrice")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>